# EditorConfig File
root = true

# Unix-Style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# The trailing whitespace is a requirement of the markdown rules.
[*.{diff,md}]
trim_trailing_whitespace = false

The editor configuration of the *.json and *.yml files matches.
[*.{json,yml,r}]
indent_style = space
indent_size = 4
